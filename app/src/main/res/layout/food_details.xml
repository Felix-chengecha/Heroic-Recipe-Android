<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white2"
    android:layout_height="match_parent" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/simg"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_baseline_arrow_back_24"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fimages"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:scrollbars="horizontal" />

    <TextView
        android:id="@+id/food_category2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fimages"
        android:layout_marginStart="35dp"
        android:text="food-category"
        android:textColor="@color/lblue"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/food_name2"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/food_category2"
        android:layout_marginStart="35dp"
        android:layout_marginTop="5dp"
        android:text="Homemade waffle"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/food_name2"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/lblue"
        android:shadowRadius="6"
        android:text="2"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:icon="@drawable/ic_baseline_food_bank_24" />

    <Button
        android:id="@+id/people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/food_name2"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/time"
        android:backgroundTint="@color/npink"
        android:shadowRadius="6"
        android:text="2"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:icon="@drawable/ic_baseline_food_bank_24" />

    <Button
        android:id="@+id/bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/food_name2"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/people"
        android:backgroundTint="@color/ngreen"
        android:shadowRadius="6"
        android:text="add"
        android:textSize="11sp"
        app:icon="@drawable/ic_baseline_bookmark_24" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="Ingridients"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ingridients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="60dp"
        android:scrollbars="horizontal" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/cooking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookmark"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="5dp"
        android:contentDescription="TODO"
        app:backgroundTint="@color/orange"
        android:src="@drawable/ic_baseline_local_fire_department_24" />



</RelativeLayout>